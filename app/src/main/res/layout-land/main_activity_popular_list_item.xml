<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_margin_16_dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_item_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/back_drop_land_height" />

        <ImageView
            android:id="@+id/list_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_circle_outline"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/list_item_desc"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</LinearLayout>